<%= render partial: 'app_show'%>
<h3>Pets Applied For <% @application.pets.each do |pet| %></h3>
                        <% if pet.status(@application.id) == nil %>
                            <%= link_to "#{pet.name}", "/pets/#{pet.id}"%> 
                            <%= button_to "Approve", "/admin/applications/#{@application.id}", params: {status: 'a', pet: pet.id}, method: :patch %>
                            <%= button_to "Reject", "/admin/applications/#{@application.id}",params: {status: 'r', pet: pet.id}, method: :patch %>
                          <% elsif pet.status(@application.id) == "Approved" %>
                            <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %> - <%=pet.status(@application.id)%></p>
                          <% elsif pet.status(@application.id) == "Rejected" %>
                          <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %> - <%=pet.status(@application.id)%></p>
                        <%end%>
                    <% end%>
